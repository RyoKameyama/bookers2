<h2>User info</h2>
<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_with model:@user, local:true do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name, autofocus: true, id:"user_name"%>

  <label for="user_image">Image</label>
  <%= f.attachment_field :profile_image%>

  <label for="user_introduction">Introdction</label>
  <%= f.text_area :introduction, autofocus: true, id:"user_introduction"%>

  <%= f.submit "Update User" %>
  <% end %>
