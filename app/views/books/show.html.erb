<div class="container">
  <div class="row">

<div class="col-md-3">
<h1>User info</h1>
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100"  %>
    <h3 class="profile-name">name<%= @user.name %></h3>
    <h3 class="introduction">introdction<%= @user.introduction %></h3>
    <p><%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_37420" %></p>
</div>


<h2>New book</h2>
<% if @newbook.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@newbook.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @newbook.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_with model: @newbook,local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
</div>
<% end %>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<div>
  <p><%= link_to user_path(@book.user) do %>
  <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
  <% end %>
  </p>
  <p><%= link_to "#{@user.name}", user_path(@user.id) %></p>
  <p><%= link_to "#{@book.title}", book_path(@book.id) %></p>
  <p>Opinionï¼š<%= @book.body %></p>
</div>

<% if @book.user == current_user %>
  <p>
    <%= link_to "Edit", edit_book_path(@book.id) %> | <%= link_to "Destroy", book_path(@book), method: :delete %>
  </p>
<% end %>
</div>
</div>
</div>